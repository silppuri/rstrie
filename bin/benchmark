#!/usr/bin/env ruby

$LOAD_PATH << File.dirname(__FILE__) + '/../lib'

require 'benchmark/ips'
require 'securerandom'
require 'rstrie'
require 'trie'

prefixes = []
File.new('./bin/female-names.txt').each_line do |name|
  name.strip!
  (1..(name.length)).each{ |l|
      prefix = name[0...l]
      prefixes.push(prefix)
  }
end

fast_trie = Trie.new
rstrie = Rstrie.new
Benchmark.ips do |x|
  x.report('Fast Trie add') do |times|
    times.times do
      prefixes.each do |prefix|
        fast_trie.add(prefix)
      end
    end
  end

  x.report('Rust trie add') do |times|
    times.times do
      prefixes.each do |prefix|
        rstrie.add(prefix)
      end
    end
  end

  x.compare!
end

Benchmark.ips do |x|
  x.report('Fast Trie get') do |times|
    times.times do
      prefixes.each do |prefix|
        fast_trie.get(prefix)
      end
    end
  end

  x.report('Rust trie get') do |times|
    times.times do
      prefixes.each do |prefix|
        rstrie.get(prefix)
      end
    end
  end

  x.compare!
end

